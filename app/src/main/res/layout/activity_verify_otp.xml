<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.VerifyOTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/otpBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_close"
            app:tint="@color/teal" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:src="@drawable/ic_security"
            android:textSize="100sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/teal"
                android:includeFontPadding="false"
                android:text="Nhập mã verify từ SMS"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/optMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal"
                android:includeFontPadding="false"
                android:text="+84968944787"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/otp_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="@string/verify_code"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/optET1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/optET2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/optET3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/optET4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/optET5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/optET6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/teal2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/teal"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button"
            android:text="@string/verify_code"
            android:textColor="@color/white"
            android:transitionName="transition_OTP_screen" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal"
                android:includeFontPadding="false"
                android:text="Không nhận được mã OTP?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/resendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal"
                android:includeFontPadding="false"
                android:text="Gửi mã"
                android:layout_marginLeft="10dp"
                android:textColor="@color/teal"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>