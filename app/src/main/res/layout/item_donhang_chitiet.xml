<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_imgchitiet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_person" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/item_imgchitiet"
                    android:orientation="vertical"
                    android:padding="2dp">


                    <TextView
                        android:id="@+id/item_tenspchitiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laptop"
                        android:textColor="@color/teal"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/item_soluongchitiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số lượng 2"
                        android:textColor="@color/teal"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/item_giaspchitiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giá: 25000đ"
                        android:textColor="@color/teal"
                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>